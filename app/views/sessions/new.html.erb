<h1> Log In </h1>

<% if flash[:alert] %>
    <div class="alert"><%= flash[:alert] %></div>
<% end %> <br><br>

<%= form_with(url: '/login') do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %> <br><br>
    <%= f.label :password %>
    <%= f.password_field :password %> <br><br>

    <%= f.submit "Log In" %>
    <% end %>